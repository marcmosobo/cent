<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SellFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/Product_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageButton5"
            android:text="Product or Service"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Product_tag"
            android:layout_marginStart="65dp"
            android:hint="Enter name"
            android:maxLength="55"
            android:maxLines="1"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_file_name"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/Image_tag"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_file_name"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:text="Feature Image "
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Image_tag"
            android:layout_marginTop="20dp"


            android:text="choose Image" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_below="@+id/button_choose_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/rupee_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view"
            app:srcCompat="@drawable/ic_rupee" />

        <TextView
            android:id="@+id/Price_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/rupee_button"
            android:text="Price or Charge "
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_file_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Price_tag"
            android:layout_marginStart="60dp"
            android:hint="Enter Amount"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1" />

        <TextView
            android:id="@+id/Description_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_file_price"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Description (optional) "
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Description_tag"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Short Description"
            android:lines="2"
            android:maxLength="400" />

        <TextView
            android:id="@+id/Category_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_file_price"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="125dp"
            android:text="Category"
            android:textSize="25dp"
            android:textStyle="bold" />

<!--        <EditText-->
<!--            android:id="@+id/Category"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/Description_tag"-->
<!--            android:layout_marginStart="20dp"-->
<!--            android:layout_marginTop="107dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:hint="Dropdown"-->
<!--            android:lines="2"-->
<!--            android:maxLength="400" />-->

        <Spinner
            android:id="@+id/spinner_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Category_tag"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="338dp"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Location_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_file_price"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="204dp"
            android:text="Location (optional) "
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Description_tag"
            android:layout_marginStart="20dp"
            android:layout_marginTop="186dp"
            android:layout_marginEnd="10dp"
            android:hint="Give directions"
            android:lines="2"
            android:maxLength="400" />

        <TextView
            android:id="@+id/OpenTime_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_file_price"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="305dp"
            android:text="Open Time"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/OpenTime_tag"
            android:layout_alignBottom="@+id/progress_bar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="10dp"
            android:timePickerMode="spinner" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Description"
            android:layout_marginTop="384dp"
            android:layout_marginBottom="-4dp" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_bar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="159dp"
            android:text="Upload" />


    </RelativeLayout>

</ScrollView>